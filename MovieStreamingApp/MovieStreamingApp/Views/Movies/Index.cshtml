@model IEnumerable<MovieStreamingApp.Models.Movie>

@{
    ViewData["Title"] = "Movies";
}

<div class="container">
    <h1 class="display-4 text-center">Movies</h1>
    <p class="text-center">Explore the latest movies in our collection!</p>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Title</th>
                <th>Genre</th>
                <th>Director</th>
                <th>Release Date</th>
                <th>Rating</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.Title</td>
                    <td>@movie.Genre</td>
                    <td>@movie.Director</td>
                    <td>@movie.ReleaseDate.ToShortDateString()</td>
                    <td>@movie.Rating / 10</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@movie.Id" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-id="@movie.Id" class="btn btn-primary btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@movie.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="text-center">
    <a asp-action="Create" class="btn btn-success">Add New Movie</a>
</div>
